@page "/list/{name}/{vname}"

<h1>@Util.ManifestName</h1>

<table>
    <tr>
        <th>[Name]</th>
        <th>[Try]</th>
        <th>[Correct]</th>
    </tr>
    @for (int i = 0; i < Util.Names.Count; i++)
    {
    <tr>
        <td>@Util.Names[i]</td>
        <td>
            <div class="form-check mycheck">
                <input type="checkbox" class="form-check-input  form-control-lg" id="try@i">
                <label class="form-check-label" for="try@i" style="font-size:2em;">挑戦!</label>
            </div>
        </td>
        <td>
            <div class="form-check mycheck">
                <input type="checkbox" class="form-check-input" id="correct@i">
                <label class="form-check-label" for="correct@i" style="font-size:2em;">正解!</label>
            </div>
        </td>
    </tr>
    }
</table>

@functions {
    [Parameter]
    private string Name { get; set; } = "";
    [Parameter]
    private string VName { get; set; } = "";

    protected override void OnInit()
    {
        base.OnInit();
        Util.SetResource(Name,VName);
    }
}